<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/yellow"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大盘指数"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:id="@+id/imgsousuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/sou"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="#FF6A6A">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上证指数"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/txtprice1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上证指数"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/txtup1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上证指数"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:id="@+id/txtdown1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上证指数"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#FF6A6A"
            android:layout_margin="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深证成指"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                />
            <TextView
                android:id="@+id/txtprice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="上证指数"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                android:textColor="#FFFFFF"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/txtup2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上证指数"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    />
                <TextView
                    android:id="@+id/txtdown2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上证指数"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="10dp"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#CCCCCC">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_margin="5dp"
            android:text="涨幅榜"
            android:textSize="16sp"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/mListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none"
        >

    </ListView>
</LinearLayout>